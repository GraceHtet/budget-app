<section class='devise-container'>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class='nav'>
      <%= link_to "ðŸ¡¨",home_path, class:'back'%>
      <h2>Sign up</h2>
      <span></span>
    </div>

    <div class="field">
      <%= f.text_field :name, placeholder:'Name', autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder:'Email', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <%= f.password_field :password, placeholder:"Password(#{@minimum_password_length} characters minimum)" ,autocomplete: "new-password" %>
      
      <% end %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder:'Confirmed password', autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'log-btn' %>
    </div>
  <% end %>

  <div class='log-links'>
    <%= render "devise/shared/links"%>
  </div>

</section>