<section class='form'>
    <%= render partial:'shared/nav', locals:{title:'New Category', url:categories_path}%>
    <%= form_with model:@category, url:categories_path, method: :post, html: {multipart: true} do |f| %>
        <div class='form-group'>
            <%= f.label :name, 'Name'%>
            <%= f.text_field :name, placeholder: 'Category name' %>
        </div>

        <div class="form-group">
            <%= f.label :icon %>
            <%= f.file_field :icon %>
        </div>    

        <div class="actions">
            <%= f.submit "Submit" , class: 'log-btn'%>
        </div>
    <% end %>
</section>