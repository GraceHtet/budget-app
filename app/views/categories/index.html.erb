<section class='category'>
    <h1>Categories</h1>
    <% @categories.each do |category|%>
        <%= link_to category_path(category.id) do%>
            <h2><%= category.name %></h2>
            <%= image_tag category.icon ,width:'50px', height:'50px', class:'icon' %>
        <% end %>
    <% end %>

    <%= link_to '+ New Category', new_category_path, class:'log-btn'%>
</section>